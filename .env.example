# Application
PORT=3000
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb://localhost:27017/whatsapp_doctor_bot

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=supersecretjwtkeythatshouldbemorecomplex
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=7

# WhatsApp Web.js
WHATSAPP_SESSION_PATH=./.wwebjs_auth
WHATSAPP_WEB_JS_QR_CODE_ENABLED=true

# WhatsApp Business API (Fallback)
WHATSAPP_BUSINESS_API_URL=https://graph.facebook.com/v19.0
WHATSAPP_BUSINESS_API_TOKEN=YOUR_BUSINESS_API_TOKEN
WHATSAPP_BUSINESS_API_PHONE_ID=YOUR_BUSINESS_API_PHONE_NUMBER_ID

# LLM Layer
LLM_API_KEY=YOUR_GEMINI_OR_OPENAI_API_KEY
LLM_MODEL_NAME=gemini-pro

# Vector Memory Hub (e.g., Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=YOUR_QDRANT_API_KEY

# Encryption Key for PII (AES-256, 32 bytes for GCM)
# IMPORTANT: Generate a strong, random 32-byte key and store it securely.
# Example generation in Node.js: require('crypto').randomBytes(32).toString('hex')
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef
ENCRYPTION_IV_LENGTH=16

# Queue connection for BullMQ
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379